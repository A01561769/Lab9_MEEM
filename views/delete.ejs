<%- include ("./partials/_header") %>

<main role="main" class="container">
    <div class="row">
        <div class="col-md-8 blog-main">
            <h2 class="blog-post-title"> Are you sure you want to delete? </h2>
            <form action="/delete/<%= post._id %>" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="title" value="<%= post.title %>" readonly>
                </div>
                <div class="form-group">
                    <input type="text" name="author" class="form-control" value="<%= post.author %>" readonly>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="post_data" cols="100" rows="10"
                    readonly><%= post.post_data %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Delete</button>
            </form>
        </div>
    </div>
</main>

<%- include ("./partials/_footer") %>